alias i='sudo dnf install'
alias vi='nvim'
alias c='clear'
alias rld='. ~/.bashrc.d/config'
alias chk='dnf check-update'
alias .='nvim .'

# APP RELATED

# Node
alias pnx='pnpm exec'

# Git
