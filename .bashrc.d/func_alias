## Service Management
### Start Service function
st() {
    case "$1" in
      # Docker
      docker)
        systemctl --user start docker-desktop
        ;;
      # Minimal Chromium
      webdev)
        if [ -z "$2" ]; then
          echo "Usage: start webdev <port>"
          return 1
        fi
        chromium-browser --new-window --app="http://localhost:$2"
        ;;
      *)
        echo "Service unknown: $1"
        return 1
        ;;
    esac
  }

### Stop Service function
sp() {
    case $1 in
      # Docker
      docker)
        systemctl --user stop docker-desktop
        ;;
      *)
        echo "Service unknown: $1"
        return 1
        ;;
    esac
  }
