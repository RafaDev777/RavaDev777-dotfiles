### Service List
declare -A services=(
["docker_start"]="systemctl --user start docker-desktop"
["docker_stop"]="systemctl --user stop docker-desktop"
["webdev_start"]="start-webdev"
["ohmyposh_update"]="update-ohmyposh"
)

start() {
    service="$1"

    if [[ -n "${services["${service}_start"]}" ]]; then
      eval "${services["${service}_start"]}"
    else
      echo "Service unknown or missing start command: $service"
      return 1
    fi
  }
  
stop() {
    service="$1"

    if [[ -n "${services["${service}_stop"]}" ]]; then
      eval "${services["${service}_stop"]}"
    else
      echo "No stop command defined fo the service: $service"
      return 1
    fi
  }

update() {
    service="$1"

    if [[ -n "${services["${service}_update"]}" ]]; then
      eval "${services["${service}_update"]}"
    else
      echo "No update command defined for the service: $service"
      return 1
    fi
    
  }

# webde_start function - Vivaldi minimal window
start-webdev() {
  read -p "Enter port for webdev: " port

  if [ -z "$port" ]; then
    echo "Usage: start-webdev <port>"
    return 1
  fi

  vivaldi --new-window --app="http://localhost:$port"
}

update-ohmyposh() {
  local install_dir="$HOME/.dotfiles/ohmyposh/bin"
  local file="oh-my-posh"
    rm -rf "$install_dir/$file"
    curl -s https://ohmyposh.dev/install.sh | bash -s -- -d "$install_dir"
  }
