# FUNCTIONAL
alias l='ls -la'
alias search='grep'
alias upg='sudo dnf upgrade'
alias i='sudo dnf install'
alias vi='nvim'
alias c='clear'
alias rld='. ~/.bashrc.d/aliases'


# APP RELATED
## Docker
alias start:docker='sudo systemctl --user start docker-desktop'
alias stop:docker='sudo systemctl --user stop docker-desktop'

# Node
alias pnx='pnpm exec'

# DIRECTORY
## Variable
doc="$HOME/Documents"
wrk="$doc/_work"

##General
alias go:doc="cd $doc"
alias go:wrk="cd $wrk"

### Work
krta="$wrk/kairotheia/kairotheia-web-dev/"
alias go:krta='cd $krta'

wgdv="$wrk/wgd_world-graphic-design/wgd-web-dev"
alias go:wgdv='cd $wgdv'

klaus="$wrk/klaus/klaus-web-dev/"
alias go:klaus='cd $klaus'

### Config
cfg="$HOME/.config"
alias="$HOME/.bashrc.d/"

alias cfg='vi $cfg'
alias cfg:alias='vi $alias'
alias cfg:nvim="vi $cfg/nvim"

alias vi:krta='vi $krta'
alias vi:wgdv='vi $wgdv'
alias vi:klaus='vi $klaus'
